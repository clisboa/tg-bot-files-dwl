# Telegram API Credentials
# Get these from https://my.telegram.org
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=abcdef1234567890abcdef1234567890

# Your Telegram Phone Number (with country code)
TELEGRAM_PHONE=+1234567890

# Download folder path
TELEGRAM_FOLDER=/path/to/downloads

# Channel/Group ID (optional - use channel mode instead of private chat)
# For supergroups/channels, use the channel ID (can be negative)
# Get it by forwarding a message from the channel to @userinfobot
# TELEGRAM_CHANNEL_ID=-1001234567890

# Allowed user ID (only this user can use the bot)
# Find your user ID using @userinfobot on Telegram
TELEGRAM_USER_ID=123456789

# Debug mode (optional, default: false)
TELEGRAM_DEBUG=false

# Allowed file types (optional, comma-separated, leave empty for all types)
# Example: pdf,docx,txt,zip,rar,7z
TELEGRAM_ALLOWED_TYPES=

# Authentication file paths (optional, for custom paths)
# These files are used for authentication and are auto-deleted after use
# TELEGRAM_CODE_FILE=telegram_code.txt
# TELEGRAM_PASSWORD_FILE=telegram_password.txt
